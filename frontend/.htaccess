# Nur f端r proxy.php im aktuellen Verzeichnis
<Files "proxy.php">
    # Sicherstellen, dass PHP als PHP ausgef端hrt wird (IONOS Shared Hosting)
    ForceType application/x-httpd-php

    # Richtige Typen f端r HLS-Stream-Bestandteile
    AddType application/vnd.apple.mpegurl .m3u8
    AddType video/mp2t .ts

    # Falls der Server einen Download erzwingen will -> deaktivieren
    <IfModule mod_headers.c>
        Header unset Content-Disposition
        Header set Content-Disposition "inline"
        Header set X-Content-Type-Options "nosniff"
        # CORS offen lassen f端r dein Frontend
        Header set Access-Control-Allow-Origin "*"
        # Caching bei Livestreams vermeiden
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </IfModule>
</Files>
